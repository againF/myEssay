【1】月份用数字就好不要传字符串
【2】nextYear = currentYear + 1这句不要写成
    nextYear = currentYear++或
    nextYear = ++currentYear
【3】不用传入currentDate参数，直接在函数内部用Date对象的方法获取currentDate就好
以下是正确代码：
function getNextDay (currentYear,currentMonth,currentDay) {
	var nextYear,
		nextMonth,
		nextDay;
	// var CurrentDate = new Date();
	// var currentYear = CurrentDate.getFullYear();
	// var currentMonth = CurrentDate.getMonth() + 1;
	// var currentDay = CurrentDate.getDate();
	//leap year
	if( currentMonth < 0 || currentMonth > 12 || currentDay < 0 || currentDay > 31) {
		console.log("currentDate wrong");
		return;
	}
	if((currentYear % 4 == 0 && currentYear % 100 != 0) || currentYear % 400 == 0) {
		switch(currentMonth) {
			case 1 :
			case 3 :
			case 5 :
			case 7 :
			case 8 :
			case 10 :
			case 12 :
				if(currentMonth == 12 && currentDay == 31) {
					nextYear = currentYear + 1;
					nextMonth = 1;
					nextDay = 1;
				}else if (currentDay == 31) {
					nextYear = currentYear;
					nextMonth = currentMonth + 1;
					nextDay = 1;
				}else {
					nextYear = currentYear;
					nextMonth = currentMonth;
					nextDay = currentDay + 1;
				}
				console.log("currentDay:" + currentYear + "." + currentMonth + "." + currentDay);
				console.log("nextDay:" + nextYear + "." + nextMonth + "." + nextDay);
				break;
			case 4 :
			case 6 :
			case 9 :
			case 11 :
				if (currentDay == 30) {
					nextYear = currentYear;
					nextMonth = currentMonth + 1;
					nextDay = 1;
				}else {
					nextYear = currentYear;
					nextMonth = currentMonth;
					nextDay = currentDay + 1;
				}
				console.log("currentDay:" + currentYear + "." + currentMonth + "." + currentDay);
				console.log("nextDay:" + nextYear + "." + nextMonth + "." + nextDay);
				break;
			case 2 :	
				if(currentDay == 29) {
					nextYear = currentYear;
					nextMonth = 3;
					nextDay = 1;
				}else {
					nextYear = currentYear;
					nextMonth = currentMonth;
					nextDay = currentDay + 1;
				}
				console.log("currentDay:" + currentYear + "." + currentMonth + "." + currentDay);
				console.log("nextDay:" + nextYear + "." + nextMonth + "." + nextDay);
				break;
		}
	}else {//not leap year
		switch(currentMonth) {
			case 1 :
			case 3 :
			case 5 :
			case 7 :
			case 8 :
			case 10 :
			case 12 :
				if(currentMonth == 12 && currentDay == 31) {
					nextYear = currentYear + 1;
					nextMonth = 1;
					nextDay = 1;
				}else if (currentDay == 31) {
					nextYear = currentYear;
					nextMonth = currentMonth + 1;
					nextDay = 1;
				}else {
					nextYear = currentYear;
					nextMonth = currentMonth;
					nextDay = currentDay + 1;
				}
				console.log("currentDay:" + currentYear + "." + currentMonth + "." + currentDay);
				console.log("nextDay:" + nextYear + "." + nextMonth + "." + nextDay);
				break;
			case 4 :
			case 6 :
			case 9 :
			case 11 :
				if (currentDay == 30) {
					nextYear = currentYear;
					nextMonth = currentMonth + 1;
					nextDay = 1;
				}else {
					nextYear = currentYear;
					nextMonth = currentMonth;
					nextDay = currentDay + 1;
				}
				console.log("currentDay:" + currentYear + "." + currentMonth + "." + currentDay);
				console.log("nextDay:" + nextYear + "." + nextMonth + "." + nextDay);
				break;
			case 2 :	
				if(currentDay == 28) {
					nextYear = currentYear;
					nextMonth = 3;
					nextDay = 1;
				}else {
					nextYear = currentYear;
					nextMonth = currentMonth;
					nextDay = currentDay + 1;
				}
				console.log("currentDay:" + currentYear + "." + currentMonth + "." + currentDay);
				console.log("nextDay:" + nextYear + "." + nextMonth + "." + nextDay);
				break;
		}
	}
}
